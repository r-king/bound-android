<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="actionBarStyle">@style/Theme.Bound.ActionBar</item>
        <item name="android:background">@color/fragmentBackground</item>
        <item name="android:textColor">@color/textPrimary</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Bound.ActionBar" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ButtonBorder" parent="Widget.AppCompat.Button.Colored" />

    <!-- Action Button -->
    <style name="ButtonBorder.Accent">
        <item name="android:background">@drawable/bg_btn_outline</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:singleLine">true</item>
        <item name="android:padding">4dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:minHeight">0dp</item>
        <item name="android:drawableTint">@color/colorAccent</item>
    </style>

    <!-- Action Button Selected-->
    <style name="ButtonBorder.Fill" parent="ButtonBorder.Accent">
        <item name="android:background">@drawable/bg_button_fill</item>
        <item name="android:textColor">@color/colorAccent</item>
    </style>

</resources>
